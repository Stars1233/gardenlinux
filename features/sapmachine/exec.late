#!/usr/bin/env bash

set -eufo pipefail

cp /builder/features/sapmachine/sapmachine.key /etc/apt/keyrings/sapmachine-apt-keyring.asc
echo "deb [signed-by=/etc/apt/keyrings/sapmachine-apt-keyring.asc] https://dist.sapmachine.io/debian/$(dpkg --print-architecture)/ ./" | tee /etc/apt/sources.list.d/sapmachine.list
apt-get update -y
apt-get install -y sapmachine-25-jre-headless
